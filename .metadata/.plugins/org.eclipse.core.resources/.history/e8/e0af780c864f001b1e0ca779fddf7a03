package services;

import models.BoardEntity;

public class Board {
	BoardEntity board;
	public Board(BoardEntity board)
	{
		this.board=board;
	}
	public void play()
	{
		int index=0;
		while(true)
		{
			board.players.get(index).play(board);
			if(board.positions.get(board.players.get(index))==board.numberOfCells)
			{
				System.out.println(board.players.get(index).name+" wins the game");
				return;
			}
			index++;
			if(index>=board.players.size())
				index=0;
		}
	}
}
